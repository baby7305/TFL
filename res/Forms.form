form Client
{
	layout = LAYOUT_VERTICAL
	alignment = ALIGN_VCENTER_HCENTER 
	
	slider group
	{
		text = Group
		height = 100
		width = 300
		min =  1
		max =  4
		step = 1
		valueTextVisible = true 
		valueTextPrecision = 0 
