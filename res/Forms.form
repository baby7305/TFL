{
	layout = LAYOUT_VERTICAL
	alignment = ALIGN_VCENTER_HCENTER 
	
	label IP
	{
	}
	
	label state
	{
	}
	
	slider speed
	{
		text = Speed
		width = 80%
		min =  1
		max =  10
		value = 1.0
		step = 1
		valueTextVisible = true 
	}
	
	checkBox ai
	{
		text = Builtin AI
