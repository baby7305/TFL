}

form GameMain
{
	layout = LAYOUT_VERTICAL
	alignment = ALIGN_VCENTER_RIGHT 
	size = 20%,100%
	
	button return
	{
		height = 10%
		text = Exit
	}
	
	label state
	{
		height = 10%
	}
	
	slider weight
	{
		height = 20%
		width = 100%
		min =  1
		max =  1000
		step = 1
		valueTextVisible = true
		valueTextPrecision = 0
	}
	
	container units
	{
		layout = LAYOUT_VERTICAL
		width = 100%
		height = 60%
		scroll = SCROLL_BOTH
		scrollBarsAutoHide = true 
	}
}



