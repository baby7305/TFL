form Main
{
	layout = LAYOUT_VERTICAL
	alignment = ALIGN_VCENTER_RIGHT
	
    label title
	{ 
		text = The First Law
	}
	button play
	{
		text = Play
	}
	button settings
	{
		text = Settings
	}
	button about
	{
		text = About
	}
    button exit
	{
        text = Exit
	}
}

form About
{
	layout = LAYOUT_VERTICAL
	alignment = ALIGN_VCENTER_RIGHT
	
    label info
	{}
	
	button code
	{
		text = View code on GitHub
	}
	
	button report
	{
		text = Report a bug
	}
	
	label text
	{
		text = log:
	}
	
	container log
	{
		layout = LAYOUT_VERTICAL
		size = 500,300
		scroll = SCROLL_BOTH
		scrollBarsAutoHide = false 
		
	}
	
	button clear
	{
		text = Clear
	}
	
	button return
	{
		text = Return 
	}
}

form Play
{
	layout = LAYOUT_VERTICAL
	alignment = ALIGN_VCENTER_HCENTER 
	size = 80%,100%
	
	label title
	{
		text = New Game
	}

	label title1
	{
		text = LAN Server:
	}
	
	container servers
	{
		layout = LAYOUT_VERTICAL
		scroll = SCROLL_BOTH
		scrollBarsAutoHide = true 
		size =80%,30%
	}
	
	label title2
	{
		text = Maps:
	}
	
	container maps
	{
		layout = LAYOUT_VERTICAL
		scroll = SCROLL_BOTH
		scrollBarsAutoHide = true 
		size =80%,30%
	}
	
	container LAN
	{
		width =100%
		layout = LAYOUT_FLOW
		label title3
		{
			text = Server IP:
		}
		textbox IP
		{
			inputMode = TEXT
			size = 300,50
		}
		button connect
		{
			text = Join
		}
	}
	
	button return
	{
		alignment = ALIGN_BOTTOM
		text = Return 
	}
	
}

form Settings
{
	layout = LAYOUT_VERTICAL
	alignment = ALIGN_VCENTER_HCENTER 
	width = 80%
	scroll = SCROLL_VERTICAL
	scrollBarsAutoHide = true 
	
	slider width
	{
		text = width
		width = 50%
		min =  800
		max =  4096
		step = 1
		valueTextVisible = true 
		valueTextPrecision = 0 
	}
	
	slider height
	{
		text = height
		width = 50%
		min =  600
		max =  2160
		step = 1
		valueTextVisible = true 
		valueTextPrecision = 0 
	}
	
	button currentsize
	{
		text = Current Size
	}
	
	checkBox fullscreen
	{
		text = Full Screen
	}
	
	button reload
	{
		text = Reload
	}
	
	label effect
	{
		text = Effects
	}
	
	checkBox particle
	{
		text = Particle Effect
		checked = false
	}
	
	slider shadow
	{
		text = ShadowMap Size
		width = 50%
		min =  0
		max =  16384
		value = 0
		step = 512
		valueTextVisible = true 
		valueTextPrecision = 0 
	}
	
	slider bias
	{
		text = ShadowMap Bias
		width = 50%
		min =  0
		max =  0.01
		value = 0.005
		step = 0.0005
		valueTextVisible = true 
		valueTextPrecision = 4 
	}
	
	slider miniMap
	{
		text = MiniMap Size
		width = 50%
		min =  0
		max =  512
		value = 512
		step = 128
		valueTextVisible = true 
	}
	
	button return
	{
		text = Save and Return 
	}
}

