material sky
{
	u_worldViewProjectionMatrix = WORLD_VIEW_PROJECTION_MATRIX

    sampler u_diffuseTexture
    {
        path = res/maps/test/sky.png
        mipmap = true
        wrapS = REPEAT
        wrapT = REPEAT
        minFilter = LINEAR_MIPMAP_LINEAR
        magFilter = LINEAR
    }
	
    technique shadow
    {

		renderState
		{
			cullFace = true
			depthTest = true
			depthFunc = LEQUAL
		}
		
        pass
        {
            vertexShader = res/shaders/sky.vert
            fragmentShader = res/shaders/sky.frag
        }
    }
	
		
    technique water
    {
		renderState
		{
			cullFace = true
			depthTest = true
			depthFunc = LEQUAL
			stencilOpSfail = KEEP 
			stencilOpDpfail = KEEP 
			stencilOpDppass = KEEP
			stencilFunc = EQUAL
			stencilFuncRef =2
			stencilTest = true
			stencilWrite = 0 
		}
		
        pass
        {
            vertexShader = res/shaders/sky.vert
            fragmentShader = res/shaders/sky.frag
        }
    }
}
